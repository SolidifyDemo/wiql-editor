{
    "manifestVersion": 1,
    "id": "wiql-search",
    "version": "0.1.299",
    "name": "Wiql Search",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Search work items with wiql queries.",
    "publisher": "ottostreifel",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "agile",
        "work Item",
        "query",
        "wiql"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "links": {
        "home": {
            "uri": "https://bit.ly"
        },
        "getstarted": {
            "uri": "https://bit.ly"
        },
        "learn": {
            "uri": "https://bit.ly"
        },
        "support": {
            "uri": "https://bit.ly"
        },
        "repository": {
            "uri": "https://bit.ly"
        },
        "issues": {
            "uri": "https://bit.ly"
        }
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        },
        {
            "path": "styles",
            "addressable": true
        },
        {
            "path": "playground.html",
            "addressable": true
        },
        {
            "path": "queryEditor.html",
            "addressable": true
        },
        {
            "path": "queryContext.html",
            "addressable": true
        }
    ],
    "categories": [
        "Integrate"
    ],
    "contributions": [
        {
            "id": "wiql-playground-hub",
            "type": "ms.vss-web.hub",
            "description": "Playground for wiql queries",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Wiql Playground",
                "uri": "playground.html"
            }
        },
        {
            "id": "results-context-menu",
            "type": "ms.vss-web.action",
            "description": "Edit the current query",
            "targets": [
                "ms.vss-work-web.work-item-query-results-toolbar-menu"
            ],
            "properties": {
                "text": "Edit current query wiql",
                "group": "actions",
                "uri": "queryContext.html",
                "registeredObjectId": "showProperties"
            }
        },
        {
            "id": "query-menu",
            "type": "ms.vss-web.action",
            "description": "Edit query in menu",
            "targets": [
                "ms.vss-work-web.work-item-query-menu"
            ],
            "properties": {
                "text": "Edit query",
                "icon": "images/show-properties.png",
                "group": "actions",
                "uri": "queryContext.html",
                "registeredObjectId": "showProperties"
            }
        },
        {
            "id": "contextForm",
            "type": "ms.vss-web.control",
            "description": "Editor for the given query",
            "targets": [ ],
            "properties": {
                "uri": "queryEditor.html"
            }
        }
    ]
}
